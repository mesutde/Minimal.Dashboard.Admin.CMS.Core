
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";

    
}

<div class="panel-heading main-color-bg">
    <h3 class="panel-title">Kategori Düzenle</h3>
</div>
<div class="panel-body">
    <form>
        <div class="form-group">
            <label>Kategori Başlığı</label>
            <input type="text"
                   class="form-control"
                   placeholder="Kategori Başlığı"
                   value="Başlık" />
        </div>
    
        <div class="checkbox">
            <label> <input type="checkbox" checked /> Yayınla </label>
        </div>

        <div class="form-group">
            <label>Oluşturma Tarihi </label>
            @DateTime.Now.ToShortDateString()
            
        </div>
        
        <input type="submit" class="btn btn-default" value="Güncelle" />
    </form>
</div>





