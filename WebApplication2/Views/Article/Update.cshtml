
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="panel-heading main-color-bg">
    <h3 class="panel-title">Yazı Düzenle</h3>
</div>
<div class="panel-body">
    <form>
        <div class="form-group">
            <label>Başlık</label>
            <input type="text"
                   class="form-control"
                   placeholder="Başlık"
                   value="Başlık" />
        </div>

     
        <div class="form-group">
            <label>Meta Tags</label>
            <input type="text"
                   class="form-control"
                   placeholder="Meta Tags..."
                   value="tag1 , tag2" />
        </div>
        <div class="form-group">
            <label>Meta Description</label>
            <input type="text"
                   class="form-control"
                   placeholder="Meta Description..."
                   value="  Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et " />
        </div>



        <div class="form-group">
            <label>Page Body</label>

            <div style="height: 400px;" id="editor"></div>

        </div>


        <div class="checkbox">
            <label> <input type="checkbox" checked /> Aktif? </label>
        </div>

        <div class="checkbox">
            <label> <input type="checkbox" checked /> Yayınla </label>
        </div>

        <input type="submit" class="btn btn-default" value="Güncelle" />
    </form>
</div>





<!-- Include the Quill Styles -->
<link href="https://cdn.quilljs.com/1.3.7/quill.snow.css" rel="stylesheet" />

<!-- Include the Quill library -->
<script src="https://cdn.quilljs.com/1.3.7/quill.js"></script>
<script src="https://cdn.jsdelivr.net/npm/quill-image-resize-module@3.0.0/image-resize.min.js"></script>


<!-- Initialize Quill editor -->
<script>

    var toolbarOptions = [
        ['bold', 'italic', 'underline', 'strike'],
        ['blockquote', 'code-block'],
        [{ 'color': [] }, { 'background': [] }],
        [{ 'header': 1 }, { 'header': 2 }],
        [{ 'list': 'ordered' }, { 'list': 'bullet' }],
        [{ 'script': 'sub' }, { 'script': 'super' }],
        [{ 'indent': '-1' }, { 'indent': '+1' }],
        [{ 'direction': 'rtl' }],
        [{ 'size': ['small', false, 'large', 'huge'] }],
        [{ 'header': [1, 2, 3, 4, 5, 6, false] }],
        [{ 'align': [] }],
        ['image'],
        ['clean']
    ];

    var quill = new Quill('#editor', {
        modules: {
            toolbar: toolbarOptions,

            imageResize: {
                displaySize: true
            },
        },
        placeholder: 'Lütfen  İçeriğini giriniz...',
        theme: 'snow'
    });



    document.addEventListener("DOMContentLoaded", function () {
        quill.on('text-change', function (delta, oldDelta, source) {
            document.querySelector('#Body').value = quill.root.innerHTML;
        });
    });


</script>


