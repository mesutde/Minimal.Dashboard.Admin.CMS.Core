
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel-heading main-color-bg">
    <h3 class="panel-title">Kullanıcı Düzenle</h3>
</div>
<div class="panel-body">
    <form>
        <div class="form-group">
            <label>Ad Soyad</label>
            <input type="text"
                   class="form-control"
                   placeholder="Ad Soyad"
                   value="Ad Soyad" />
        </div>


        <div class="form-group">
            <label>Email</label>
            <input type="email"
                   class="form-control"
                   placeholder="Lütfen Emailinizi giriniz?"
                   value="mesut@hotmail.com" />
        </div>

        <div class="form-group">
            <label>Oluşturma Tarihi </label>
            @DateTime.Now.ToShortDateString()

        </div>

        <div class="checkbox">
            <label> <input type="checkbox" checked /> Aktif ? </label>
        </div>

        <input type="submit" class="btn btn-default" value="Güncelle" />
    </form>
</div>

